{:name        :shell-injection
 :description "Detect usage of bash -c on clojure.java.shell/sh invoke."
 :checks      [{:type                  :import-and-usage
                :ns-name               "clojure.java.shell"
                :function-name         "sh"
                :fn-regex "($ $lookup-function #\"sh|bash\" \"-c\" $)"}]}